<process name="BP_UpdateLineApproved"
               targetNamespace="http://xmlns.oracle.com/GrnApprovalWorkflow/GrnApproval/BP_UpdateLineApproved"
               xmlns="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
               xmlns:client="http://xmlns.oracle.com/GrnApprovalWorkflow/GrnApproval/BP_UpdateLineApproved"
               xmlns:ora="http://schemas.oracle.com/xpath/extension"
               xmlns:bpelx="http://schemas.oracle.com/bpel/extension"
         xmlns:bpws="http://schemas.xmlsoap.org/ws/2003/03/business-process/"
         xmlns:ns1="http://xmlns.oracle.com/pcbpel/adapter/db/GrnApprovalWorkflow/GrnApproval/UpdateLineAPPROVED"
         xmlns:bpel2="http://docs.oasis-open.org/wsbpel/2.0/process/executable">

    <!-- 
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
        PARTNERLINKS                                                      
        List of services participating in this BPEL process               
      ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
    --> 
  <partnerLinks>
    <!-- 
      The 'client' role represents the requester of this service. It is 
      used for callback. The location and correlation information associated
      with the client role are automatically set using WS-Addressing.
    -->
    <partnerLink name="bp_updatelineapproved_client_ws" partnerLinkType="client:BP_UpdateLineApproved" myRole="BP_UpdateLineApprovedProvider"/>
    <partnerLink name="UpdateLineAPPROVED"
                 partnerLinkType="ns1:UpdateLineAPPROVED_plt"
                 partnerRole="UpdateLineAPPROVED_role"/>
  </partnerLinks>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
      VARIABLES                                                        
      List of messages and XML documents used within this BPEL process 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <variables>
    <!-- Reference to the message passed as input during initiation -->
    <variable name="inputVariable" messageType="client:BP_UpdateLineApprovedRequestMessage"/>

    <!-- Reference to the message that will be returned to the requester-->
    <variable name="outputVariable" messageType="client:BP_UpdateLineApprovedResponseMessage"/>
    <variable name="Invoke_UpdateLineApp_update_InputVariable"
              messageType="ns1:RcvShipmentLinesCollection_msg"/>
  </variables>

  <!-- 
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
     ORCHESTRATION LOGIC                                               
     Set of activities coordinating the flow of messages across the    
     services integrated within this business process                  
    ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
  -->
  <sequence name="main">

    <!-- Receive input from requestor. (Note: This maps to operation defined in BP_UpdateLineApproved.wsdl) -->
    <receive name="receiveInput" partnerLink="bp_updatelineapproved_client_ws" portType="client:BP_UpdateLineApproved" operation="process" variable="inputVariable" createInstance="yes"/>
    <assign name="Transform1">
      <bpelx:annotation>
        <bpelx:pattern>transformation</bpelx:pattern>
      </bpelx:annotation>
      <copy>
        <from expression="ora:doXSLTransformForDoc('xsl/Transformation_6.xsl', $inputVariable.payload)"/>
        <to variable="Invoke_UpdateLineApp_update_InputVariable"
            part="RcvShipmentLinesCollection"/>
      </copy>
    </assign>
    <invoke name="Invoke_UpdateLineApp"
            inputVariable="Invoke_UpdateLineApp_update_InputVariable"
            partnerLink="UpdateLineAPPROVED"
            portType="ns1:UpdateLineAPPROVED_ptt" operation="update"
            bpelx:invokeAsDetail="no"/>
    <!-- Generate reply to synchronous request -->
    <reply name="replyOutput" partnerLink="bp_updatelineapproved_client_ws" portType="client:BP_UpdateLineApproved" operation="process" variable="outputVariable"/>
  </sequence>
</process>